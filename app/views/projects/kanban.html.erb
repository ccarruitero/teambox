<section>
  <h2>kanbanView</h2>
  <div id="board">
  </div>
</section>
<nav id="navbar"></nav>

<script type="text/x-handlebars">
  {{outlet}}
</script>

<script type="text/x-handlebars" data-template-name="index">
  <h4>Projects</h4>
  {{#each project in model}}
    <li class="project">
      {{#linkTo 'tasks' project.id}}{{project.name}}{{/linkTo}}
    </li>
  {{/each}}
</script>

<script type="text/x-handlebars" data-template-name="task_lists">
  <h4>Task Lists</h4>
  {{#each taskList in model}}
    <li class="task_list">
      {{#linkTo 'tasks' taskList.id}}{{taskList.name}}{{/linkTo}}
    </li>
  {{/each}}
</script>

<script type="text/x-handlebars" id="tasks">
  <h4>Tasks</h4>
    {{task-zone tasks=backlogTasks title='backlog' action='updateTaskStatus'}}
    {{task-zone tasks=todoTasks title='todo' action='updateTaskStatus'}}
    {{task-zone tasks=doingTasks title='doing' action='updateTaskStatus'}}
    {{task-zone tasks=doneTasks title='done' action='updateTaskStatus'}}
</script>

<script type="text/x-handlebars" id="components/task-zone">
  <h5>{{title}}</h5>
  {{#each task in tasks}}
    {{task-detail task=task class=task.statusName}}
  {{/each}}
</script>

<script type="text/x-handlebars" id="components/task-detail">
    <li>{{task.name}}</li>
</script>
